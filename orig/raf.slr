#!/bin/bash
#SBATCH -J vraf
#SBATCH --account=rogersa-kp
#SBATCH --partition=rogersa-kp
#SBATCH --time=36:00:00
#SBATCH --nodes 1
#SBATCH --ntasks 1
#SBATCH -o vindija.raf.gz
#SBATCH -e raf.err

seq 22 | sort | xargs -n 1 printf "vindija-chr%s-filtered.vcf.bgz\n" | \
xargs -n 1 bcftools query -f '%CHROM\t%POS\t%REF\t%ALT[\t%GT]\n' | \
raf | gzip -c

